<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.academy_intern.ment2link">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Drawers.MentorNavigatationDrawer"
            android:label="@string/title_activity_new_navigatation_drawer_fix"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.MentorProfile" />
        <activity
            android:name=".Activities.PasswordRestActivity"
            android:parentActivityName=".Activities.Login" />
        <activity
            android:name=".SearchMentorActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EditAppointment" />
        <activity android:name=".Activities.FindMentorSearch" />
        <activity android:name=".Activities.Calender" />
        <activity android:name=".Activities.ViewMentorCalender" />
        <activity android:name=".Activities.RequestActivity"></activity>
    </application>

</manifest>